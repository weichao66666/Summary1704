        android:theme="@style/AppTheme"
        tools:replace="android:theme">
        <activity
            android:name="io.weichao.summary1704.activity.SplashActivity"
            android:screenOrientation="landscape">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="io.weichao.summary1704.activity.MainActivity"
            android:screenOrientation="landscape" />
        <activity
            android:name="io.weichao.summary1704.activity.ExhibitActivity"
            android:screenOrientation="landscape" />
