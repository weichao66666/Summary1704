            android:screenOrientation="landscape" />
        <activity
            android:name="io.weichao.summary1704.activity.CompassActivity"
            android:screenOrientation="landscape" />
        <activity
            android:name="io.weichao.summary1704.activity.EarthMoonActivity"
            android:screenOrientation="landscape" />
